---
import { Image as AstroImage } from 'astro:assets';
import '../../styles/components/slices/image.scss';

const { image } = Astro.props;
---

<section class="image">
  {!!image?.url?.length && (
    <AstroImage
      class={!!image.mobile?.url?.length && 'desktop-only'}
      src={image.url}
      alt={image.alt || ''}
      width={image.dimensions.width}
      height={image.dimensions.height}
    />
  )}
</section>