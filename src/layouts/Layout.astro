---
import Footer from '../components/Footer.astro';
import { fetchSingleDocumentByType } from "../lib/prismic/queries";
import '../styles/global.scss';

const { title = 'Paper Plane Olympics' } = Astro.props;
const { data } = await fetchSingleDocumentByType({ type: "global_navigation" }) || {};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
		<Footer description={data?.footer_desc} />
	</body>
</html>
